    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "ProgressExplorer",
            "request": "launch",
            "mainClass": "fizzer.ProgressExplorer",
            "projectName": "ProgressExplorer",
            "stopOnEntry": false,
            "vmArgs": "-Xss100m -Xms512m -Xmx10000m -Dsun.awt.disablegrab=true",
            "cwd": "${workspaceFolder}",
